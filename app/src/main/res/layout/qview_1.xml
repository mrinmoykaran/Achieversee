<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/q_back_border"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/qNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_price"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="10dp"
            android:backgroundTint="#8AF44336"
            android:paddingRight="10dp"
            android:text="1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/qTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:paddingLeft="5dp"
            android:text="What is the capital of india ?"
            android:textColor="#F44336"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#F44336" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rgOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#673AB7"
                android:checked="false"
                android:fontFamily="@font/montserrat_regular"
                android:tag="1"
                android:text="Mumbai"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#673AB7"
                android:fontFamily="@font/montserrat_regular"
                android:tag="2"
                android:text="Kolkata"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/opt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#673AB7"
                android:fontFamily="@font/montserrat_regular"
                android:tag="3"
                android:text="Delhi"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/opt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#673AB7"
                android:fontFamily="@font/montserrat_regular"
                android:tag="4"
                android:text="Lucknow"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>