<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/q_back_border3"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/q_back_border3">

                        <ImageView
                            android:id="@+id/aptitude"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:padding="15dp"
                            android:src="@drawable/aptitide" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/aptitude"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:text="Aptitude"
                            android:textSize="10sp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/q_back_border3"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/q_back_border3">

                        <ImageView
                            android:id="@+id/resoning"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:padding="15dp"
                            android:src="@drawable/reasoning" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/resoning"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:text="Reasoning"
                            android:textSize="10sp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/q_back_border3"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/q_back_border3">

                        <ImageView
                            android:id="@+id/english"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:padding="15dp"
                            android:src="@drawable/english" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/english"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:text="English"
                            android:textSize="10sp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/q_back_border3"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/q_back_border3">

                        <ImageView
                            android:id="@+id/currentaffairs"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:padding="15dp"
                            android:src="@drawable/currentaffairs" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/currentaffairs"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:text="Current Affairs"
                            android:textSize="10sp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card5"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/q_back_border3"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/q_back_border3">

                        <ImageView
                            android:id="@+id/generalscience"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:padding="15dp"
                            android:src="@drawable/generalscience" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/generalscience"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:text="GENERAL SCIENCE"
                            android:textSize="10sp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card6"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/q_back_border3"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/q_back_border3">

                        <ImageView
                            android:id="@+id/generalknowledge"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:padding="15dp"
                            android:src="@drawable/generalknowledge" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/generalknowledge"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:text="G.K"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="TRENDING NOTES"
                android:textColor="#7A7E85"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#9C9A9A" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/gradient_2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="TRENDING MOCK TEST"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/trending" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRecomemded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp" />

    </LinearLayout>


</ScrollView>