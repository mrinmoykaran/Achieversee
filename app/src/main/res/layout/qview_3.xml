<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/q_back_border"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/qNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#8AF44336"
            android:background="@drawable/back_price"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="1"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qTitle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/as" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#F44336" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rgOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#673AB7"
                android:checked="false"
                android:fontFamily="@font/montserrat_regular"
                android:tag="1"
                android:text="a)First Option Loading..."
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#673AB7"
                android:fontFamily="@font/montserrat_regular"
                android:tag="2"
                android:text="b)Second Option Loading..."
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/opt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#673AB7"
                android:fontFamily="@font/montserrat_regular"
                android:tag="3"
                android:text="c)Delhi"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/opt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#673AB7"
                android:fontFamily="@font/montserrat_regular"
                android:tag="4"
                android:text="d)Lucknow"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>